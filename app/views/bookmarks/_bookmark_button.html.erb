<% if logged_in? %> 
  <% if current_user.favorite?(recipe) %>
    <%= form_with(url: bookmarks_path, method: :delete) do |f| %>
      <%= hidden_field_tag :recipe_id, recipe.id %>
      <%= f.submit '♡お気に入りに追加済', class: 'btn btn-sm btn-secondary header-btn', id: 'unlike-btn' %>
    <% end %>
  <% else %>
    <%= form_with(url: bookmarks_path) do |f| %>
      <%= hidden_field_tag :recipe_id, recipe.id %>
      <%= f.submit '♡お気に入りに追加', class: 'btn btn-sm btn-light header-btn', id: 'like-btn' %>
    <% end %>
  <% end %>
<% end %>