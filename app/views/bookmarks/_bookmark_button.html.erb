<% if logged_in? %> 
  <% if current_user.favorite?(recipe) %>
    <%= form_with(model: current_user.bookmarks.find_by(recipe_id: recipe.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :recipe_id, recipe.id %>
      <%= f.submit 'ブックマークをはずす', class: 'btn btn-sm btn-outline-primary' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.bookmarks.build, local: true) do |f| %>
      <%= hidden_field_tag :recipe_id, recipe.id %>
      <%= f.submit 'ブックマークする', class: 'btn btn-sm btn-primary' %>
    <% end %>
  <% end %>
<% end %>