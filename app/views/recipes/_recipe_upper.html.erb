<%= stylesheet_link_tag "recipes/recipe_upper", :media => "all" %>

<div class="row">
  <div class="col-sm-4 offset-sm-1">
    <h1><%= recipe.title %></h1>
  </div>
</div>
<div class="row mb-2">
  <div class="col-sm-4 offset-sm-1">
    <%= cl_image_tag(recipe.image.to_s, alt: recipe.title) %>
  </div>
  <div class="col-sm-5">
    <div>
      <p><%= recipe.explanation %></p>
    </div>
    <h4>by <%= link_to recipe.user.name, user_path(recipe.user) %></h4>
    <% if @recipe.ingredients.present? %>
      <table class="table table-sm">
        <h2>材料</h2>
        <% @recipe.ingredients.each do |ingredient| %> 
          <tr><td><%= ingredient.name %></td><td><%= ingredient.quantity %></td></tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
