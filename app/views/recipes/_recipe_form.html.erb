  <%= form_with(model: recipe, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-row">
      <div class="col-sm-4 offset-sm-1">
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <div class="mb-3">
            <%= cl_image_tag(@recipe.image.to_s, alt: @recipe.title, id: :img_prev) if @recipe.image? %>
          </div>
          <%= f.file_field :image, class: "image", id: "book_img" %>      
        </div>
      </div>
      <div class="col-sm-5">
        <div class="form-group">
          <%= f.label :explanation, "説明" %>
          <%= f.text_area :explanation, class: 'form-control'%>
        </div>
      </div>
    </div>
    <div class="form-row">
      <%= f.fields_for :feature do |s| %>
        <div class="form-group">
          <%= s.label :amount, "ボリュームは？" %>
          <%= s.text_field :amount, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= s.label :type, "何系料理？" %>
          <%= s.text_field :type, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= s.label :main_food, "メインの食材は？" %>
          <%= s.text_field :main_food, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= s.label :cooking_method, "調理法は？" %>
          <%= s.text_field :cooking_method, class: 'form-control' %>
        </div>
      <% end %>
    </div>
      <div class="col-sm-6 offset-sm-3">
        <%= f.submit '保存して次へ', class: 'btn btn-light btn-block' %>
      </div>
  <% end %>
