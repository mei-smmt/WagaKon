<div class="mb-2">
  <%= form_with(url: path, method: :get, local: true, class: 'd-inline border-right') do |f| %>
    <%= f.submit "新しい順", disabled: (@sort.blank? ? true : false), class: "btn btn-sm sort-btn #{"disabled" if @sort.blank?} pl-0" %>
  <% end %>
  <%= form_with(url: path, method: :get, local: true, class: 'd-inline border-right') do |f| %>
    <%= hidden_field_tag :sort_order, 'old' %>
    <%= f.submit "古い順", disabled: (@sort == "old" ? true : false), class: "btn btn-sm sort-btn #{"disabled" if @sort == "old"}" %>
  <% end %>
  <%= form_with(url: path, method: :get, local: true, class: 'd-inline') do |f| %>
    <%= hidden_field_tag :sort_order, 'likes' %>
    <%= f.submit "お気に入りの多い順", disabled: (@sort == "likes" ? true : false), class: "btn btn-sm sort-btn #{"disabled" if @sort == "likes"}" %>
  <% end %>
</div>