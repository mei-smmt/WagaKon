<div class="container">
  <div class="row">
    <% recipes.each do |recipe| %>
      <div class="col-sm-4">
        <a href="/recipes/<%= recipe.id %>" class="card">
          <%= cl_image_tag(recipe.image.to_s, alt: recipe.title) %>
          <div class="card-body">
            <h5 class="card-title text-secondary"><%= recipe.title %></h5>
            <p class="text-secondary text-right">ブックマーク：<%= recipe.bookmarks.count %></p>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
