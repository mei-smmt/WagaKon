<%= stylesheet_link_tag "recipes/recipes", :media => "all" %>

  <div class="row">
    <% recipes.each do |recipe| %>
      <div class="col-sm-3 col-6">
        <a href="/recipes/<%= recipe.id %>" class="card">
          <%= cl_image_tag(recipe.image.to_s, alt: recipe.title) %>
          <div class="card-body">
            <h3 class="card-title text-secondary"><%= recipe.title %></h3>
            <p class="text-secondary text-right"><i class="fas fa-heart"></i><%= recipe.bookmarks.count %></p>
          </div>
        </a>
      </div>
    <% end %>
  </div>
