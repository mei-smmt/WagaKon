<%= stylesheet_link_tag "recipes/recipes", :media => "all" %>
  
<div class="row">
  <% recipes.each do |recipe| %>
    <div class="col-sm-3 col-6">
      <a href="/recipes/<%= recipe.id %>" class="card">
        <%= cl_image_tag(recipe.image.to_s, alt: recipe.title) %>
        <div class="card-body">
          <h2 class="card-title text-secondary"><%= recipe.title %></h2>
          <h4>by <%= recipe.user.name %></h4>
          <% if recipe.draft? %>
            <p class="text-secondary">非公開</p>
          <% end %>
          <p class="text-secondary text-right">♡<%= recipe.bookmarks.count %></p>
        </div>
      </a>
    </div>
  <% end %>
</div>
