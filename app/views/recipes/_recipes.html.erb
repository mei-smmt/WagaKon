<div class="row">
  <% recipes.each do |recipe| %>
    <div class="col-sm-4 col-6 p-2">
      <a href="/recipes/<%= recipe.id %>" class="card border-0">
        <%= cl_image_tag(recipe.image.to_s, class: "card-img-top rounded-0", alt: recipe.title) %>
        <div class="card-img-overlay p-1">
          <p class="text-secondary">♡<%= recipe.bookmarks.count %></p>
        </div>
        <div class="card-img-overlay text-right p-1">
          <% if recipe.draft? %>
            <p class="text-secondary">非公開</p>
          <% end %>
          </div>
        <div class="card-footer border-0 bg-white px-2 py-1">
          <h3 class="text-body mb-0"><%= recipe.title %></h3>
          <h5 class="text-secondary">by <%= recipe.user.name %></h5>
        </div>
      </a>
    </div>
  <% end %>
</div>
