<h2>作り方</h2>
<%= form_with(url: recipe_steps_path, method: method, local: true) do |form| %>
  <div class="form-row">
    <% @steps.each.with_index(1) do |step, index|%>
      <%= form.fields_for 'steps[]', step do |f| %>
        <div class="col-md-3">
          <h2 class="mb-1"><%= index %></h2>
          <%= f.hidden_field :number, :value => index %>
          <div class="form-group mb-2">
            <%= f.text_area :content, class: "form-control" %>
          </div>
          <%= render 'layouts/error_messages', model: f.object %>
        </div>  
      <% end %>
    <% end %>
　</div>　  
  <div class="col-12 col-md-6 offset-md-3 p-0">
    <%= form.submit button_message, class: 'btn btn-sm submit-btn btn-block' %>
  </div>
<% end %>