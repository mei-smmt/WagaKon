<div class="row">
  <!--検索フォーム-->
  <div class="col-md-8 mb-3">
    <%= form_with(url: search_articles_path, method: :get, local: true) do |f| %>
      <div class="form-row align-items-center">
        <div class="col-9">
          <%= f.text_field :search, class: 'form-control form-control-sm' %>
        </div>
        <div class="col-3">
          <%= f.submit 'DIYを検索', class: 'btn btn-sm btn-outline-dark' %>
        </div>
      </div>
    <% end %>
  </div>
  
  <!--記事投稿ボタン-->
  <div class="col-md-4 mb-3">
    <div>
      <% if logged_in? %> 
        <%= link_to "ブックマークした記事", favorite_articles_user_path(current_user), class: 'btn btn-sm btn-warning' %>
        <%= link_to "記事を投稿する", new_article_path, class: 'btn btn-sm btn-warning' %>
      <% else %>
        <%= link_to "ブックマークした記事", login_path, class: 'btn btn-sm btn-warning' %>
        <%= link_to "記事を投稿する", login_path, class: 'btn btn-sm btn-warning' %>
      <% end %>
    </div>
  </div>
</div>
