<header>
  <nav class="navbar navbar-expand-sm px-0 py-3 m-0 navbar-light">
    <a class="navbar-brand" href="/">WagaKon</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <!--ログイン済み-->
        <% if logged_in? %>
          <li class="nav-item"><%= link_to 'マイページ', user_path(current_user), class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to "お気に入りレシピ", favorite_recipes_user_path(current_user), class: 'nav-link' %>
          <li class="nav-item"><%= link_to "レシピを追加する", new_recipe_path, class: 'nav-link' %>
          <li class="nav-item"><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
        <!--ログインなし-->
        <% else %>
          <li class="nav-item"><%= link_to '新規登録', signup_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>