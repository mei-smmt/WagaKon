<% content_for(:html_title) { "新規会員登録 | Wagakon" } %>
<div class="text-center">
  <h1>新規登録</h1>
</div>
<div class="row">
  <div class="col-sm-4 offset-sm-4">
    <%= form_with(url: signup_path, model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: @user %>
      <div class="form-group">
        <%= f.label :name, 'ニックネーム' %>
        <%= f.text_field :name, required: :true, placeholder: "例：わがこん太郎", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, required: :true, placeholder: "例：wagakon@example.com", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, required: :true, placeholder: "4〜12文字・半角英数", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, required: :true, placeholder: "もう一度入力してください", class: 'form-control' %>
      </div>
      <%= f.submit '登録', class: 'btn submit-btn btn-block' %>
    <% end %>
  </div>
</div>

