<%= stylesheet_link_tag "users/show", :media => "all" %>

<div class="row">
  <div class="col-sm-4 offset-sm-4">
    <h1><%= @user.name %></h1>
    <%= cl_image_tag(@user.image.to_s, alt: @user.name) if @user.image? %>
    <!--編集ボタン-->
    <div>
      <% if current_user == @user %>
        <%= link_to "編集", edit_user_path(@user), class: 'border-bottom', id: 'edit-button' %>
      <% end %>
    </div>
  </div>
</div>
<!--投稿レシピ一覧-->
<h2 class="mt-4">投稿したレシピ</h2>
<%= render 'recipes/recipes', recipes: @recipes %>
