<% content_for(:html_title) { "パスワード編集 | Wagakon" } %>
<% breadcrumb :password_edit %>
<%= render "layouts/breadcrumbs" %>
<%= render "layouts/side_bar" do %>    
  <div class="text-center">
    <h2>パスワード変更</h2>
  </div>
  <%= render 'layouts/error_messages', model: @user %>
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <%= form_with(url: password_update_users_path, model: @user, method: :patch, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :current_password, '現在のパスワード' %>
          <%= f.password_field :current_password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, '新しいパスワード' %>
          <%= f.password_field :password, placeholder: "4〜12文字・半角英数", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder: "もう一度入力してください", class: 'form-control' %>
        </div>
        <%= f.submit '更新', class: 'btn submit-btn btn-block' %>
      <% end %>
    </div>
  </div>
<% end %>