<div class="row mx-0">
  <!--レシピ検索フォーム-->
  <%= render 'recipes/search', keyword: @search_keyword, feature: @search_feature, keyword_submit: @k_submit, feature_submit: @f_submit %>
  <div class="col-sm-7 pr-3">
    <h2>プロフィール編集</h2>
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-row mt-4">
        <div class="form-group col-sm-6">
          <div class="mb-3">
            <%= f.label :image, "プロフィール画像" %><br>
            <%= cl_image_tag(@user.image.to_s, alt: @user.name, id: :img_prev) %>
          </div>
          <%= f.file_field :image, class: "image", id: "book_img" %>      
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :name, '名前' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :personal_id, 'ID' %>
            <%= f.text_field :personal_id, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, '現在のパスワード' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <p><%= link_to 'パスワードを変更する', password_edit_user_path %></p>
        </div>
        <div class="col-sm-2 offset-sm-5">
          <%= f.submit '更新', class: 'btn submit-btn btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
  <!--献立一覧-->
  <%= render 'meals/index', recipes: @recipes %>
</div>

