<div class="card-group">
  <% articles.each do |article| %>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><%= article.title %></h5>
        </div>
        <div class="card-body">
          <%= image_tag article.image.url %>
        </div>
      </div>
    </div>
  <% end %>
</div>
