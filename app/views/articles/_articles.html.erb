<div class="container">
  <div class="row">
    <% articles.each do |article| %>
      <div class="col-sm-4">
        <a href="/articles/<%= article.id %>", class="card" %>
          <div class="card-body">
            <h4 class="card-title"><%= article.title %></h4>
            <%= image_tag article.image.url %>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
