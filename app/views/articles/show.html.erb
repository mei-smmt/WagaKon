<%= render 'layouts/second_navbar' %>

<!--編集、削除ボタン-->
<div class="mb-2">
  <% if current_user == @article.user %>
    <%= link_to "記事を編集する", edit_article_path(@article), class: 'btn btn-info btn-sm' %>
    <%= link_to "削除", @article, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger btn-sm' %>
  <% end %>
</div>

<!--ブックマークボタン-->
<div class="mb-2">
  <%= render 'bookmarks/bookmark_button', article: @article %>
</div>

<!--記事詳細view-->
<%= render 'articles/article', article: @article %>

