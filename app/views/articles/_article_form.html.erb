  <%= form_with(model: article, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-row">
      <div class="col-md-5 offset-sm-1">
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: 'form-control'%>
        </div>
        
        <div class="form-group">
          <div class="mb-3">
            <%= f.label :image, "画像（変更前）" %><br>
            <%= image_tag @article.image.url if @article.image? %>
          </div>
          <%= f.label :image, "新しい画像" %><br>
          <%= f.file_field :image, class: "image" %>      
        </div>
      </div>
    
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :explanation, "説明" %>
          <%= f.text_area :explanation, class: 'form-control'%>
        </div>
      </div>
      
      <div class="col-md-6 offset-sm-3">
        <%= f.submit '保存して次へ', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
