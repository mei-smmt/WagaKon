<% if logged_in? %>
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= form_with(model: @article, local: true) do |f| %>
        <%#= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: 'form-control'%>
        </div>
        
        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, class: "image" %>      
        </div>
        
        <div class="form-group">
          <%= f.label :explanation, "説明" %>
          <%= f.text_area :explanation, class: 'form-control'%>
        </div>
        
        <%= f.submit '保存して次へ', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>記事の投稿にはユーザー登録が必要です</h1>
      <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>