<% content_for(:html_title) { "#{@recipe.title}の材料入力 | Wagakon" } %>
<% breadcrumb :ingredients_edit, @recipe %>
<%= render "layouts/breadcrumbs" %>
<%= render "layouts/side_bar" do %>
  <div class="card p-md-2">
    <div class="card-body px-2 py-3">
      <h2 class="heading">材料を入力する</h2>
      <%= render 'ingredients/form', recipe: @recipe, method: :patch %>
      <!--レシピ特徴-->
      <%= render 'features/index', recipe: @recipe %>
    </div>
  </div>
<% end %>