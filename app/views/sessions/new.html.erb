<% content_for(:html_title) { "ログイン | Wagakon" } %>
<div class="p-2">
  <div class="text-center">
    <h1>ログイン</h1>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, required: :true, placeholder: "メールアドレス", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, required: :true, placeholder: "パスワード", class: 'form-control' %>
        </div>
        <%= f.submit 'ログイン', class: 'btn submit-btn btn-block' %>
      <% end %>
      <p>ユーザー登録がまだの方： <%= link_to '新規会員登録', signup_path %></p>
      <div class="d-flex justify-content-center m-4">
        <h2>または<h2>
      </div>
      <%= link_to "テストログイン", test_login_users_path, method: :post, class: 'btn submit-btn btn-block' %>
      <p>・パスワードは「testpass」です。</p>
    </div>
  </div>
</div>