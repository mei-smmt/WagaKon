<h3><%= recipe.title %></h3>
<div class="row">
  <div class="col-md-5">
    <%= cl_image_tag(recipe.image.to_s, alt: recipe.title) %>
  </div>
  <div class="col-md-7">
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">説明</h5>
        <h6 class="card-text"><%= recipe.explanation %></h6>
      </div>
    </div>
    <%= form_with(url: recipe_materials_path, method: method, local: true) do |form| %>
      <% @materials.each do |material|%>
        <%= form.fields_for 'materials[]', material do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-row">
            <div class="form-group col-md-6 mb-2">
              <%= f.label :name, "材料" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group col-md-6 mb-2">
              <%= f.label :quantity, "数量" %>
              <%= f.text_field :quantity, class: "form-control" %>
            </div>
          </div>
        <% end %>
      <% end %>
      <%= form.submit '保存して次へ', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>  
</div>



