<div class="container">
  <h3><%= article.title %></h3>
  <div class="row">
    <div class="col-sm-5">
      <div class="card">
        <div class="card-body">
          <%= image_tag article.image.url %>
        </div>
      </div>
    </div>
    <div class="col-sm-7">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">説明</h5>
          <h6 class="card-text"><%= article.explanation %></h6>
        </div>
      </div>
      <%= form_with(url: article_materials_path, method: method, local: true) do |form| %>
        <% @materials.each do |material|%>
          <%= form.fields_for 'materials[]', material do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            <div class="form-row">
              <div class="form-group col-sm-6 mb-2">
                <%= f.label :name, "材料" %>
                <%= f.text_field :name, class: "form-control" %>
              </div>
              <div class="form-group col-sm-6 mb-2">
                <%= f.label :quantity, "数量" %>
                <%= f.text_field :quantity, class: "form-control" %>
              </div>
            </div>
          <% end %>
        <% end %>
        <%= form.submit '保存して次へ', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>  
  </div>
</div>



